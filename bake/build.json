{
  "builders": [
    {
      "type": "docker",
      "image": "golang:1.13",
      "commit": true,
      "changes": [
        "WORKDIR /app/",
        "EXPOSE 8081",
        "ENTRYPOINT go run ."
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "./src/",
      "destination": "/app/"
    },
    {
      "type": "shell",
      "inline": [
        "cd /app/",
        "go mod init app",
        "go get -d -v .",
        "go build"]
    }
  ],
  "post-processors": [
    {
      "type": "docker-tag",
      "repository": "calculator",
      "tag": "1.0"
    }
  ]
}
